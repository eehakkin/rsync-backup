# The defaults to be used if the conf/purge-list file does not exist
# ==================================================================

# Keep hourly, minutely and secondly backups for 1 day.
hourly=1

# Keep daily backups for 1 week (for 7 days).
daily=7

# Keep weekly backups for 1 month (for 31 days).
weekly=31

# Keep monthly backups for 1 year (for 366 days).
monthly=366
