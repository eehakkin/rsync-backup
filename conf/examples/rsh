#! /bin/sh -Ceu

# A sample conf/rsh file
# ======================

# Locate the script.
me=$( which -- "${0}" || ls -d -- "${0}" )
dir=$( dirname -- "${me}" )
dir=$( readlink -f -- "${dir}" )
case ${dir} in */.misc/* ) dir=/${dir#*/.misc/} ;; esac
case ${dir} in */.ro/*   ) dir=${dir%%/.ro/*}/${dir#*/.ro/} ;; esac
case ${dir} in */.rw/*   ) dir=${dir%%/.rw/*}/${dir#*/.rw/} ;; esac

# Use identity files.
for identity_file in "${dir}/ssh"/id_*
do
	case ${identity_file} in
	*.pub ) continue ;;
	esac
	[ ! -f "${identity_file}" ] || set -- \
		-i "${identity_file}" \
		"${@}"
done

# Use some extra options.
[ ! -f "${dir}/ssh/known_hosts" ] || set -- \
	-o UserKnownHostsFile="${dir}/ssh/known_hosts" \
	"${@}"
set -- \
	-o ClearAllForwardings=yes \
	-o StrictHostKeyChecking=yes \
	-o VerifyHostKeyDNS=yes \
	"${@}"
[ ! -f "${dir}/ssh/config" ] || set -- \
	-F "${dir}/ssh/config" \
	"${@}"

# Use a proxy command for root.
case " ${*} " in
*' -l root '* )
	case ${SUDO_USER:++} in
	+ ) rsh=ssh ;;
	* ) rsh=${dir}/$( basename -- "${0}" ) ;;
	esac
	set -- \
		-o ProxyCommand="\
'${rsh}' -l '${SUDO_USER:-backup}' -p '%p' -W 'localhost:%p' -- '%h'\
" \
		"${@}"
	;;
esac

# Execute SSH.
set -- ssh "${@}"
uid=$( id -u )
case ${uid}," ${*} " in
0,*' -l backup '* )
	# Drop privileges.
	unset LD_PRELOAD
	set -- setpriv \
		--init-groups \
		--regid='backup' \
		--reuid='backup' \
		-- "${@}"
	;;
esac
cd -- / && exec "${@}"
